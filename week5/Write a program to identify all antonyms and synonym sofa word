import nltk
from nltk.corpus import wordnet

# Download WordNet data if not already present
nltk.download('wordnet')
nltk.download('omw-1.4')

def get_synonyms_antonyms(word):
    synonyms = set()

    antonyms = set()

    for syn in wordnet.synsets(word):
      for lemma in syn.lemmas():
        synonyms.add(lemma.name())
      if lemma.antonyms():
        for ant in lemma.antonyms():
          antonyms.add(ant.name())
    return synonyms,antonyms

def process_sentence(sentence):
    words = sentence.split()

    for word in words:
      synonyms, antonyms = get_synonyms_antonyms(word)
      if synonyms or antonyms:
        print(f"Word: {word}")
        print(f"Synonyms: {', '.join(sorted(synonyms)) if synonyms else 'None found'}")
        print(f"Antonyms: {', '.join(sorted(antonyms)) if antonyms else 'None found'}")
        print()

# Test sentence
sentence = "Happy is feeling unhappy"
process_sentence(sentence)
